<div class="page-header">
    <h1>Create a new Site listing</h1>
</div>

<div class="form-horizontal">
	<%= form_for(@site) do |f| %>
		<div class="form-group">
			<%= f.label :urn, class: "col-sm-2 control-label" %>
			<div class="col-sm-5"><%= f.text_field :urn, class: "form-control" %></div>
		</div>

		<div class="form-group">
			<%= f.label :url, class: "col-sm-2 control-label" %>
			<div class="col-sm-5"><%= f.text_field :url, class: "form-control" %></div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit "Crawl Site", class: "btn btn-large btn-primary" %>
			</div>
		</div>
	<% end %>
</div>