<div class="page-header">
    <h1>All Users</h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>User ID</th>
			<th>Email</th>
			<th>Sign in Count</th>
			<th>Last Signed in At</th>
			<th>Last Signed in IP</th>
			<th>Admin?</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user|%>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.email %></td>
				<td><%= user.sign_in_count %></td>
				<td><%= user.last_sign_in_at.to_formatted_s(:long) %></td>
				<td><%= user.last_sign_in_ip %></td>
				<td><%= user.admin %></td>
			</tr>
		<% end %>
	</tbody>
</table>