<div class="page-header">
    <h1>Jobs</h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Job ID</th>
			<th>URL</th>
			<th>Keyword</th>
			<th>Job Status</th>
			<th>Download Report</th>
			<% if current_user.admin? %>
				<th>Delete Job</th>
			<% end %>
		</tr>
	</thead>

	<tbody>
		<% @jobs.each do |job|%>
			<tr>
				<td><%= job.id %></td>
				<td><%= job.url %></td>
				<td><%= job.keyword %></td>
				<td><span class="label label-<%= alert(job.status) %>"><%= job.status %></span></td>
				<td><%= job.binary_data? ? "Download Results" : "No results available" %></td>
				<% if current_user.admin? %>
					<td><%= link_to "Delete", job, method: :delete, data: { confirm: "Are you sure?" }, title: job.url %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
