<div class="page-header">
    <h1>Jobs</h1>
</div>

<div class="row">
	<div class="col-lg-2">
		<p><%= @jobs_count %> / 10,000 Jobs Used</p>
	</div>

	<div class="col-lg-10">
		<div class="progress">
		  <div class="progress-bar" role="progressbar" aria-valuenow="<%= @jobs_limit %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @jobs_limit %>%;">
		    <span class="sr-only"><%= @jobs_limit %>% Complete</span>
		  </div>
		</div>
	</div>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Job ID</th>
			<th>URL</th>
			<th>Keyword</th>
			<th>Job Status</th>
			<% if current_user.admin? %>
				<th>Delete Job</th>
			<% end %>
		</tr>
	</thead>

	<tbody>
		<% @jobs.each do |job|%>
			<tr>
				<td><%= job.id %></td>
				<td><%= job.url %></td>
				<td><%= job.keyword %></td>
				<td><span class="label label-<%= alert(job.status) %>"><%= job.status %></span></td>
				<% if current_user.admin? %>
					<td><%= link_to "Delete", job, method: :delete, data: { confirm: "Are you sure?" }, title: job.url %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
